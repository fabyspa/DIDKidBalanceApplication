<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/BHomeFragment"
        android:name="it.polito.ic2020.did_kidbalanceapplication.BHomeFragment"
        android:label="BHomeFragment" >
        <action
            android:id="@+id/action_BHomeFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="it.polito.ic2020.did_kidbalanceapplication.GameFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="it.polito.ic2020.did_kidbalanceapplication.loginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_BHomeFragment"
            app:destination="@id/BHomeFragment" />
        <action
            android:id="@+id/action_loginFragment_to_GHomeFragment"
            app:destination="@id/GHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/GHomeFragment"
        android:name="it.polito.ic2020.did_kidbalanceapplication.GHomeFragment"
        android:label="GHomeFragment" >
        <action
            android:id="@+id/action_GHomeFragment_to_GGraphFragment"
            app:destination="@id/GGraphFragment" />
    </fragment>
    <fragment
        android:id="@+id/GGraphFragment"
        android:name="it.polito.ic2020.did_kidbalanceapplication.GGraphFragment"
        android:label="GGraphFragment" />
</navigation>