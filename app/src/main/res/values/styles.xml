<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleStyle"> //usato per il nome del bambino
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor"> @color/primary_text </item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="SmallStyle"> //usato per il prossimo pianeta da raggiungere
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>

    </style>

    <style name="MediumStyle"> //usato per il nome del bambino nella card della home
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>

    </style>

    <style name="FormStyle"> //usato per i dati del bambino
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor"> @color/primary_text </item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="FormInfo"> //usato per le introduzioni ai campi del form
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor"> @color/primary_color</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="ic_pianeti"> //usato per le impostazioni dei pianeti
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height"> match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:colorBackground">@color/primary_color</item>
        <item name="android:focusable">false</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="Buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height"> wrap_content</item>
        <item name="layout_gravity">center</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="paddingEnd">20dp</item>
        <item name="paddingStart">20dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="intro_large">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor"> @color/primary_color</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="layout_constraintWidth_percent">0.9</item>
    </style>

    <style name="intro_medium">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor"> @color/primary_text </item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="layout_constraintWidth_percent">0.9</item>
    </style>

    <style name="intro_next">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/accent_color</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="layout_constraintHorizontal_bias">0.9</item>
        <item name="layout_constraintVertical_bias">0.95</item>
    </style>
</resources>